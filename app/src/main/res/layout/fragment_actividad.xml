            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:id="@+id/cardLineaTiempo">

            <LinearLayout
                android:layout_width="match_parent"
