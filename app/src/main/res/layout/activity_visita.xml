<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/login3"
    tools:context=".transfer.ui.view.visita.Visita">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarVisita"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edit_text"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtVisita"
                android:layout_marginBottom="20dp"
                android:id="@+id/loginText"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue_progela"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itMotivo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                app:boxStrokeColor="#C9C8CA"
                app:hintTextColor="#C9C8CA"
                android:paddingTop="8dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/txtMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_question_mark_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:hint="@string/txtMotivo"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:id="@+id/btnIniciarVisita"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/txtIniciarVisita"
                    android:backgroundTint="@color/blue_progela"
                    app:cornerRadius="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:id="@+id/btnFinalizarVisita"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/txtTerminarVisita"
                    android:backgroundTint="@color/blue_progela"
                    app:cornerRadius="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:id="@+id/btnContinuarVisita"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/txtContinuarVisita"
                    android:backgroundTint="@color/blue_progela"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
            </LinearLayout>



    </androidx.cardview.widget.CardView>






</LinearLayout>