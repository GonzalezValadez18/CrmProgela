<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login3"
    tools:context=".prospectos.ui.view.encuesta.Encuesta8">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edit_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué tipo de transporte utilizan para la distribución de los productos"
                android:id="@+id/txtEncabezado"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue_progela" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                android:orientation="horizontal"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkbox_lunes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="16sp"
                    android:text="Motocicletas" />



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="@drawable/custom_edit_square_text"
                    android:textColor="@color/black"
                    android:hint="Número de Unidades"
                    android:textColorHighlight="@color/black"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"/>





                <CheckBox
                    android:id="@+id/checkbox_miercoles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="16sp"
                    android:text="Camionetas" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="14sp"
                    android:background="@drawable/custom_edit_square_text"
                    android:textColor="@color/black"
                    android:hint="Número de Unidades"
                    android:textColorHighlight="@color/black"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"/>



                <CheckBox
                    android:id="@+id/checkbox_viernes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="16sp"
                    android:text="Paquetería" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="14sp"
                    android:background="@drawable/custom_edit_square_text"
                    android:textColor="@color/black"
                    android:hint="Número de Unidades"
                    android:textColorHighlight="@color/black"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"/>



                <CheckBox
                    android:id="@+id/checkbox_domingo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textSize="16sp"
                    android:text="Automóvil" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:textSize="14sp"
                    android:background="@drawable/custom_edit_square_text"
                    android:textColor="@color/black"
                    android:hint="Número de Unidades"
                    android:textColorHighlight="@color/black"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"/>
            </GridLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnSiguiente"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:text="Siguiente"
                android:backgroundTint="@color/blue_progela"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>