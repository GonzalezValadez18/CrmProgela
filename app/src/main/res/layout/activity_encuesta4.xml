<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/login3"
    tools:context=".prospectos.ui.view.encuesta.Encuesta4">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarEncuesta4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edit_text"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="14dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/encuesta4"
                android:id="@+id/txtEncabezado"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue_progela"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                tools:ignore="ExtraText">

                <AutoCompleteTextView
                    android:id="@+id/categoria1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_workspace_premium_24"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:hint="@string/c1"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" /> <!-- Ajusta el padding para mover el texto a la izquierda -->
                android:drawablePadding="4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                tools:ignore="ExtraText">

                <AutoCompleteTextView
                    android:id="@+id/categoria2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_workspace_premium_24"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:hint="@string/c2"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" /> <!-- Ajusta el padding para mover el texto a la izquierda -->
                android:drawablePadding="4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                tools:ignore="ExtraText">

                <AutoCompleteTextView
                    android:id="@+id/categoria3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_workspace_premium_24"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:hint="@string/c3"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" /> <!-- Ajusta el padding para mover el texto a la izquierda -->
                android:drawablePadding="4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                tools:ignore="ExtraText">

                <AutoCompleteTextView
                    android:id="@+id/categoria4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_workspace_premium_24"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:hint="@string/c4"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" /> <!-- Ajusta el padding para mover el texto a la izquierda -->
                android:drawablePadding="4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                tools:ignore="ExtraText">

                <AutoCompleteTextView
                    android:id="@+id/categoria5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edit_text"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/baseline_workspace_premium_24"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:hint="@string/c5"
                    android:textColor="@color/blue_progela"
                    android:textColorHint="#C9C8CA"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" /> <!-- Ajusta el padding para mover el texto a la izquierda -->
                android:drawablePadding="4dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnSiguiente"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:text="@string/btn_prospectos_siguiente"
                android:backgroundTint="@color/blue_progela"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
